<?xml version="1.0"?>
<config>
    <modules>
        <Compropago_CpPayment>
            <version>2.0.0</version>
        </Compropago_CpPayment>
    </modules>

    <!-- BLOQUES GENRALES DE CODIGO -->
    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <custom_field_one>
                    <to_order_payment>*</to_order_payment>
                </custom_field_one>
                <custom_field_two>
                    <to_order_payment>*</to_order_payment>
                </custom_field_two>
            </sales_convert_quote_payment>
        </fieldsets>

        <blocks>
            <cppayment>
                <class>Compropago_CpPayment_Block</class>
            </cppayment>
        </blocks>
        <helpers>
            <cppayment>
                <class>Compropago_CpPayment_Helper</class>
            </cppayment>
        </helpers>
        <models>
            <cppayment>
                <class>Compropago_CpPayment_Model</class>
            </cppayment>
        </models>


        <!-- INSTALACION DE TABLAS -->
        <resources>
            <cppayment_setup>
                <setup>
                    <module>Compropago_CpPayment</module>
                </setup>
            </cppayment_setup>
        </resources>
    </global>


    <!-- RUTEO DEL WEBHOOK -->
    <frontend>
        <routers>
            <cpwebhook>
                <use>standard</use>
                <args>
                    <module>Compropago_CpPayment</module>
                    <frontName>cpwebhook</frontName>
                </args>
            </cpwebhook>
        </routers>
        <layout>
            <updates>
                <compropago_cppayment>
                    <file>cppayment.xml</file>
                </compropago_cppayment>
            </updates>
        </layout>
    </frontend>


    <!-- EVENTOS ESCUCHADOS DEL PLUGIN -->
    <events>

        <!-- Cambios en la configuracion de los metodos de pago -->
        <admin_system_config_changed_section_payment>
            <observers>
                <Compropago_cppayment_model_observer>
                    <type>singleton</type>
                    <class>Compropago_CpPayment_Model_Observer</class>
                    <method>registerWebhook</method>
                </Compropago_cppayment_model_observer>
            </observers>
        </admin_system_config_changed_section_payment>
    </events>


    <!-- ACTIVACION COMO METODO DE PAGO -->
    <default>
        <payment>
            <cppayment>
                <active>1</active>
                <model>cppayment/standard</model>
                <order_status>pending</order_status>
                <title>ComproPago Payment Method</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </cppayment>
        </payment>
    </default>
</config>